<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtChooseRegionHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a region"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/imgSgMap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imgSgMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/singapore_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />

    <Button
        android:id="@+id/btnWestZone"
        android:background="@drawable/circle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="25dp"
        android:text="W"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgSgMap"
        app:layout_constraintLeft_toLeftOf="@id/imgSgMap"
        app:layout_constraintRight_toRightOf="@+id/imgSgMap"
        app:layout_constraintTop_toTopOf="@+id/imgSgMap" />

    <Button
        android:id="@+id/btnNorthZone"
        android:background="@drawable/circle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="120dp"
        android:text="N"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgSgMap"
        app:layout_constraintLeft_toLeftOf="@id/imgSgMap"
        app:layout_constraintRight_toRightOf="@+id/imgSgMap"
        app:layout_constraintTop_toTopOf="@+id/imgSgMap" />

    <Button
        android:id="@+id/btnEastZone"
        android:background="@drawable/circle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/imgSgMap"
        app:layout_constraintLeft_toLeftOf="@id/imgSgMap"
        app:layout_constraintBottom_toBottomOf="@+id/imgSgMap"
        app:layout_constraintRight_toRightOf="@+id/imgSgMap"
        android:layout_marginTop="25dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btnSouthZone"
        android:background="@drawable/circle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:text="S"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgSgMap"
        app:layout_constraintLeft_toLeftOf="@id/imgSgMap"
        app:layout_constraintRight_toRightOf="@+id/imgSgMap"
        app:layout_constraintTop_toTopOf="@+id/imgSgMap" />

    <Button
        android:id="@+id/btnCentralZone"
        android:background="@drawable/circle_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="70dp"
        android:text="C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgSgMap"
        app:layout_constraintLeft_toLeftOf="@id/imgSgMap"
        app:layout_constraintRight_toRightOf="@+id/imgSgMap"
        app:layout_constraintTop_toTopOf="@+id/imgSgMap" />

</androidx.constraintlayout.widget.ConstraintLayout>